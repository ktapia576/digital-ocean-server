                                        a.btn.btn-sm.btn-outline-secondary(href="javascript:void(0);" data-toggle="modal" data-target="#assistantModal" role="button") Info
                                    .btn-group
                                        a.btn.btn-sm.btn-outline-secondary(href="https://assistant.kevintapia.com" target="_blank" role="button") Demo
                                        a.btn.btn-sm.btn-outline-secondary(href="https://github.com/ktapia576/Virtual-Assistant-Mental-Health" target="_blank" role="button") Code
                    .col-md-4
                        .card.mb-4.shadow-sm
                            img.card-img-top.pointer(src="img/portfolio.png" alt="Portfolio Image" data-toggle="modal" data-target="#portfolioModal")
                            .card-body
                                p.card-text.text-center.font-weight-bold Portfolio Website
                                p.card-text.text-center Built on a Digital Ocean Droplet needing server configurations
                                .d-flex.justify-content-between.align-items-center
                                    .btn-group
                                        a.btn.btn-sm.btn-outline-secondary(href="javascript:void(0);" data-toggle="modal" data-target="#portfolioModal" role="button") Info
                                    .btn-group
                                        a.btn.btn-sm.btn-outline-secondary(href="https://www.kevintapia.com" target="_blank" role="button") Demo
